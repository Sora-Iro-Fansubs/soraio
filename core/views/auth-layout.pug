doctype html
html(lang="en")
  head
    include partials/meta
    title
      if title
        = title + ' | ' + site_title
      else
        = site_title
    // css
    include partials/style
    // Custom css
    block customcss
    // favicon
    // ...
  body.page-brand
    main.content
      .content-header.ui-content-header.ui-content-header-auth
        .container
          .row
            .col-md-8.col-md-offset-2.col-xs-12
              h1.content-heading= site_title
              h4.content-heading= site_irc
      .container
        block body
    include partials/footer
    if message
      include partials/notif
    // js
    include partials/script
    // Custom js
    block customjs
