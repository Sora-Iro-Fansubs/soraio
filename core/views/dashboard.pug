extends backend-layout.pug

block body
  article.content.dashboard-page
    section.section
      .row.sameheight-container
        .col-xl-5
          .card.sameheight-item.items.stats(data-exclude="xs,sm,lg")
            .card-header.card-header-sm.bordered
              .header-block
                h3.title Stats
            .card-block
              .row.row-sm.stats-container
                .col-xs-12.col-sm-6.stat-col
                  .stat-icon
                    i.fa.fa-eye
                  .stat
                    .value= chart.views
                    .name Views
                  progress.progress.stat-progress(value="100", max="100")
                    .progress
                      span.progress-bar(style="width: 100%;")
                .col-xs-12.col-sm-6.stat-col
                  .stat-icon
                    i.fa.fa-cloud-download
                  .stat
                    .value= chart.downloads
                    .name Downloads
                  progress.progress.stat-progress(value="100", max="100")
                    .progress
                      span.progress-bar(style="width: 100%;")
                .col-xs-12.col-sm-6.stat-col
                  .stat-icon
                    i.fa.fa-calendar-o
                  .stat
                    .value= moment(new Date()).format('DD MMM, YYYY')
                    .name Current date
                  progress.progress.stat-progress(value="100", max="100")
                    .progress
                      span.progress-bar(style="width: 100%;")
                .col-xs-12.col-sm-6.stat-col
                  .stat-icon
                    i.fa.fa-users
                  .stat
                    .value= user_total
                    .name Total users
                  progress.progress.stat-progress(value="100", max="100")
                    .progress
                      span.progress-bar(style="width: 100%;")
        .col-xl-7
          .card.sameheight-item.items(data-exclude="xs,sm,lg")
            .card-header.card-header-sm.bordered
              .header-block
                h3.title Notification
            .card-block
              form(method="post", action="/backend/settings/notifications")
                .form-group.row
                  .col-sm-12
                    textarea.form-control.underlined(name="siteNotif", placeholder="Lorem ipsum dolor sit amet", style="height:122px;")= site_notif
                .form-group.row
                  .col-sm-4.col-md-offset-8
                    button.form-control.btn.btn-primary(type="submit") Save
    section.section
      .row.sameheight-container
        .col-xl-8
          .card.sameheight-item.items(data-exclude="xs,sm,lg")
            .card-header.card-header-sm.bordered
              .header-block
                h3.title Popular Posts
            ul.item-list.striped
              li.item.item-list-header.hidden-sm-down
                li.item
                  .item-row
                    .item-col.fixed.item-col-img.xs
                      a(href='')
                        .item-img.xs.rounded(style='background-image: url(https://s3.amazonaws.com/uifaces/faces/twitter/pankogut/128.jpg)')
                    .item-col.item-col-title.no-overflow
                      div
                        a(href='')
                          h4.item-title.no-wrap  New ways of conceptual thinking
                    .item-col.item-col-sales
                      .item-heading Sales
                      div  3217
                    .item-col.item-col-stats
                      .item-heading Stats
                      .no-overflow
                        .item-stats.sparkline(data-type='bar')
                          canvas(style='display: inline-block; width: 84px; height: 22px; vertical-align: top;', width='84', height='22')
                    .item-col.item-col-date
                      .item-heading Published
                      div  21 SEP 10:45
        .col-xl-4
          .card.sameheight-item.items(data-exclude="xs,sm,lg")
            .card-header.card-header-sm.bordered
              .header-block
                h3.title Recent Comments
            ul.item-list.striped
              li.item.item-list-header.hidden-sm-down
                li.item
                  .item-row
                    .item-col.fixed.item-col-img.xs
                      a(href='')
                        .item-img.xs.rounded(style='background-image: url(https://s3.amazonaws.com/uifaces/faces/twitter/pankogut/128.jpg)')
                    .item-col.item-col-title.no-overflow
                      div
                        a(href='')
                          h4.item-title.no-wrap  New ways of conceptual thinking
                    .item-col.item-col-date
                      .item-heading Date
                      div(style="font-size:10pt;")  21 Sep 10:45
